---
layout: default
meta_title: Blog
meta_description: Blog page description
body_class: blog
title: Le Blog
---

<main id="main" class="main inner flex flex-1 flex-col py-10 lg:py-20 focus:outline-none" tabindex="-1">

    <section id="container-centre" class="column centre flex-1" aria-label="Blogs">

        <h1 class="page-title text-3xl md:text-center md:text-5xl mb-16 lg:mb-24 lg:text-6xl">{{ title }}</h1>

        {# <div class="posts lg:flex "> #}
        <div class="mt-12 grid gap-5  mx-auto lg:grid-cols-3 lg:max-w-none">

            {% for post in collections.blog %}

            <article class="flex flex-col rounded-lg shadow-lg overflow-hidden">
             {% if post.data.featured_image %}
        <div class="flex-shrink-0">
          <img class="h-48 w-full object-cover" data-lazy="{{ post.data.featured_image }}" class="block" alt="{{ post.data.image_caption }}"/>
        </div>
        {% endif %}
        <div class="flex-1 bg-white p-6 flex flex-col justify-between">
          <div class="flex-1">
            <p class="text-sm leading-5 font-medium text-indigo-600">
              <a href="{{ post.url }}" class="hover:underline"> Case Study</a>
            </p>
            <a href="{{ post.url }}" class="block">
              <h3 class="mt-2 text-xl leading-7 font-semibold text-gray-900">
                {{ post.data.title}}
              </h3>
              <p class="mt-3 text-base leading-6 text-gray-500">
                {{ post.data.excerpt}}</p>
            </a>
          </div>
          <div class="mt-6 flex items-center">

            <div class="">
              <p class="text-sm leading-5 font-medium text-gray-900">Publié par
                <a href="#" class="hover:underline">
                  {{ site.author.name }}
                </a> le <time class="text-sm leading-5 text-gray-500" datetime="{{ post.date }}">
                   {{post.data.date | date("DD.MM.YYYY")}}
                </time>
                </p>
                {# <span class="mx-1">
                  ·
                </span>
                <span>
                  6 min read
                </span> #}

            </div>
          </div>
        </div>
      </article>






            {% endfor %}

        </div>

    </section>

</main>
